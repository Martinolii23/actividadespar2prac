#include <stdio.h>

int main() {
    char cadena[100]; 
    int longitud = 0; 
    char caracter;
    printf("\t\t\t\t**nota despues de agregar la cadena de txt presiona 1 para continuar** \n\n");
    printf("Introduce una cadena de texto: \n");

    while (1) {
        scanf(" %c", &caracter); 
        
        if (caracter == '1') {
            break;
        }

        cadena[longitud] = caracter; 
        longitud++; 
    }

    printf("La longitud de la cadena es: %d\n", longitud);

    return 0;
}
